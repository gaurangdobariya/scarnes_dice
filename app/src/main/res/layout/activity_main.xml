<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gaurang.scarnes_dice.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your score:"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="22dp"
        android:layout_alignStart="@+id/button2"
        android:layout_marginTop="11dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="22dp"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignStart="@+id/imageView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Computer score:"
        tools:layout_editor_absoluteX="117dp"
        tools:layout_editor_absoluteY="22dp"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_toEndOf="@+id/button2"
        android:layout_marginStart="69dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="22dp"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toEndOf="@+id/textView3"
        android:layout_marginStart="20dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="96dp"
        tools:layout_editor_absoluteY="70dp"
        android:src="@drawable/dice1"
        android:layout_below="@+id/textView3"
        android:layout_toEndOf="@+id/button2"
        android:layout_marginTop="19dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ROLL"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="231dp"
        android:layout_marginEnd="22dp"
        android:layout_alignBottom="@+id/button3"
        android:layout_alignEnd="@+id/imageView"
        android:onClick="rollaction"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HOLD"

        android:layout_marginStart="20dp"
        android:layout_alignBaseline="@+id/button"
        android:layout_alignBottom="@+id/button"
        android:layout_alignParentStart="true"
        android:onClick="holdaction"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESET"

        android:layout_below="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginStart="15dp"
        android:layout_marginTop="65dp"
        android:onClick="resetaction"/>
    <TextView
        android:id="@+id/yr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your score:"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="22dp"
        android:layout_below="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:layout_marginTop="36dp" />

    <TextView
        android:id="@+id/yrscr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/yr"
        android:layout_below="@+id/yr"
        android:layout_marginStart="22dp"
        android:layout_marginTop="27dp"
        android:text="00"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="28dp" />

    <TextView
        android:id="@+id/cmp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Computer score:"
        tools:layout_editor_absoluteX="117dp"
        tools:layout_editor_absoluteY="22dp"
        android:layout_alignBaseline="@+id/yr"
        android:layout_alignBottom="@+id/yr"
        android:layout_alignEnd="@+id/button3" />

    <TextView
        android:id="@+id/cmpscr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00"
        android:layout_alignBaseline="@+id/yrscr"
        android:layout_alignBottom="@+id/yrscr"
        android:layout_alignStart="@+id/textView6" />

</RelativeLayout>